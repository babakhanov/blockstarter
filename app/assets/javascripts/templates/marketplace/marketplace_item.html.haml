%span
  %span(ng-show="!ticket.waiting" ng-if="!purchasedTicket")
    %button.btn.btn-success(type="button" ng-click="purchaseModal.show()")
      .smile.align-middle.gtr-r-sm=icon :shopping_cart
      .smile.align-middle
        {{::"js.marketplace.purchase" | translate}}
  .pull-right(ng-show="ticket.waiting" style="height: 3.5rem;")
    .gtr-t.gtr-hor-sm(spinner ng-show="ticket.waiting")
  %span(ng-if="purchasedTicket")
    %button.btn.btn-info(type="button" ng-click="showTicketModal.show()")
      .smile.align-middle.gtr-r-sm=icon :eye
      .smile.align-middle
        {{::"js.marketplace.show_purchased" | translate}}
