.bg-white.gtr-hor.gtr-ver-xs.box-ticket
  .clearfix
    .tbl
      .tbl-cell.align-top
        .tbl
          .tbl-cell.cell-8.align-middle
            {{::wif.address}}
            .font-bold 
              {{::wif.balance}} {{::"js.helpers.satoshies" | translate}} ({{::wif.balance / 100000000}} {{::"js.helpers.btc" | translate}})
          .tbl-cell.cell-4.text-right.align-middle
            .smile.align-middle.gtr-l-sm
              %a(href title="{{::'js.wallets.show_wif' | translate}}" ng-click="showWif(wif)" ng-if='!wif.wif')= icon :eye
            .smile.align-middle.gtr-l-sm
              %a.link-red(href title="{{::'js.helpers.delete' | translate}}" ng-click="wif.confirmModal.show()")= icon :trash
      .tbl-cell.align-top.cell-4.text-right(style="width: 170px;")
        .gtr-hor.gtr-ver.smile
          %qrcode(size="140" data="{{wif.address}}")
  .gtr-t-xs.text-sm.font-bold(ng-show="wif.wif") {{wif.wif}}
